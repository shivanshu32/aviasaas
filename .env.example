# =============================================================================
# AVIA CLINIC - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# -----------------------------------------------------------------------------
# MongoDB Atlas Connection
# -----------------------------------------------------------------------------
# Get this from MongoDB Atlas: Database > Connect > Drivers
# Format: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb+srv://your_username:your_password@cluster0.xxxxx.mongodb.net/clinic_db?retryWrites=true&w=majority

# Database name (optional, defaults to clinic_db)
MONGODB_DB_NAME=clinic_db

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# App name displayed in UI
VITE_APP_NAME=Avia Health Clinic

# API base URL (for frontend)
VITE_API_BASE_URL=/api

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
# Enable MongoDB debug logging (true/false)
DEBUG_MONGODB=false

# Node environment
NODE_ENV=development
